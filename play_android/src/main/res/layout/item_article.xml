<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="8dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp"
    tools:ignore="MissingPrefix">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/item_home_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:text="未来可期"
            android:textColor="#666"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_home_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:text="每日一问"
            android:textColor="#333"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/item_home_author"
            app:layout_constraintTop_toBottomOf="@+id/item_home_author" />

        <TextView
            android:id="@+id/item_home_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:text="类型"
            android:textColor="#666"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/item_home_title"
            app:layout_constraintTop_toBottomOf="@+id/item_home_title" />

        <TextView
            android:id="@+id/item_home_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:paddingLeft="3dp"
            android:paddingTop="1dp"
            android:paddingRight="3dp"
            android:paddingBottom="1dp"
            android:text="置顶"
            android:textColor="#f44336"
            android:textSize="8sp"
            app:bl_corners_radius="1dp"
            app:bl_stroke_color="#f44336"
            app:bl_stroke_width="1dp"
            app:layout_constraintBottom_toBottomOf="@+id/item_home_author"
            app:layout_constraintStart_toEndOf="@+id/item_home_author"
            app:layout_constraintTop_toTopOf="@+id/item_home_author" />

        <TextView
            android:id="@+id/item_home_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:paddingLeft="3dp"
            android:paddingTop="1dp"
            android:paddingRight="3dp"
            android:paddingBottom="1dp"
            android:text="新"
            android:textColor="#f44336"
            android:textSize="8sp"
            app:bl_corners_radius="1dp"
            app:bl_stroke_color="#f44336"
            app:bl_stroke_width="1dp"
            app:layout_constraintBottom_toBottomOf="@+id/item_home_author"
            app:layout_constraintStart_toEndOf="@+id/item_home_top"
            app:layout_constraintTop_toTopOf="@+id/item_home_author" />

        <TextView
            android:id="@+id/item_home_ask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:paddingLeft="3dp"
            android:paddingTop="1dp"
            android:paddingRight="3dp"
            android:paddingBottom="1dp"
            android:text="问答"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="8sp"
            app:bl_corners_radius="1dp"
            app:bl_stroke_color="@android:color/holo_green_dark"
            app:bl_stroke_width="1dp"
            app:layout_constraintBottom_toBottomOf="@+id/item_home_author"
            app:layout_constraintStart_toEndOf="@+id/item_home_new"
            app:layout_constraintTop_toTopOf="@+id/item_home_author" />

        <TextView
            android:id="@+id/item_home_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:text="2020-03-03 23:25"
            android:textColor="#666"
            android:textSize="11sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.example.play_android.mvp.ui.view.CollectView
            android:id="@+id/item_home_collect"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/item_home_type"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/item_home_type" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>